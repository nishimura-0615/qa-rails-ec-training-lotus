<main>
  <%= form_with url: login_path do |form| %>
    <h4 class="d-flex justify-content-center mt-5 mb-3">ログイン画面</h4>
      <div class="d-flex justify-content-center">
        <div>
          <%= form.label :email, class: "mb-0" %><br>
          <p><%= form.text_field :email, id: "email" %></p>
        </div>
      </div>

    <div class="d-flex justify-content-center">
      <div>
        <%= form.label :password, class: "mb-0" %><br>
        <p><%= form.password_field :password, id: "password" %></p>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <div>
        <%= form.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <a href="">まだ登録がお済みでない方はこちら</a>
    </div>
  <% end %>
</main>
