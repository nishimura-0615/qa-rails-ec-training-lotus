<header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid">
      <div class="navbar-nav me-auto">
        <h1><%= link_to '探求学園Rails専攻', root_path, class: "nav-link navbar-brand" %></h1>
      </div>
      <div>
        <% if logged_in? %>
          <p><%= "#{ current_user.first_name } #{ current_user.last_name }" %></p>
          <ul class="navbar-nav">
            <!-- 商品検索ページが実装されたらリンクを作ること  -->
            <a class="nav-link text-dark" href="#">商品検索</a>
            <a class="nav-link text-dark" href="#">カート</a>
            <a class="nav-link text-dark" href="#">注文履歴</a>
            <%= link_to 'ユーザー情報', user_path(current_user), class: "nav-link text-dark button" %>
            <%= button_to 'ログアウト', logout_path, method: :delete, class: "nav-link text-dark button" %>
          </ul>
        <% else %>
          <ul class="navbar-nav">
            <%= link_to 'ログイン', login_path, class: "nav-link text-dark button" %>
            <%= link_to '新規登録', new_user_path, class: "nav-link text-dark button" %>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>
</header>
